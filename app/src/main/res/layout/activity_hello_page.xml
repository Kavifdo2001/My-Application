<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/profile_dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bloom" />

            <TextView
                android:id="@+id/welcome_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:hint="Loading..."
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="212dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_pic2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/bloom" />

            <TextView
                android:id="@+id/textview_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:hint="loading..."
                android:textSize="18dp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textview_show_name"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:paddingTop="10dp" />

            <ImageView
                android:id="@+id/profile_pic3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="64dp"
                android:background="@drawable/bloom" />

            <TextView
                android:id="@+id/textview_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="71dp"
                android:hint="loading..."
                android:textSize="18dp" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textview_show_email"

                android:background="@color/black"
                android:paddingTop="10dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="98dp"
                android:layout_marginEnd="69dp"
                android:indeterminateTint="@color/black"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="114dp"
                android:layout_height="67dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/bloom" />


        </RelativeLayout>

        <Button
            android:id="@+id/signout_btn"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:backgroundTint="@color/black"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <Button
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/signout_btn"
            android:layout_marginBottom="267dp"
            android:text="Home" />
    </LinearLayout>



</RelativeLayout>